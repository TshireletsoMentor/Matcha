<%- include ('./include/nav')%>
<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3"><i class="fas fa-edit"></i>Update Profile</h1>
            <%- include ('./partials/messages') %>
            <form action="/updateProfile" method="post">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input 
                        type="name"
                        name="username"
                        id="username"
                        class="form-control"
                        placeholder="Enter username"
                        value="<%= typeof username != 'undefined' ? username : '' %>"
                    >
                </div>
                <div class="form-group">
                    <label for="firstname">First name</label>
                    <input 
                        type="name"
                        name="firstname"
                        id="firstname"
                        class="form-control"
                        placeholder="Enter first name"
                        value="<%= typeof firstname != 'undefined' ? firstname : '' %>"
                    >
                </div>
                <div class="form-group">
                    <label for="lastname">Last name</label>
                    <input 
                        type="name"
                        name="lastname"
                        id="lastname"
                        class="form-control"
                        placeholder="Enter last name"
                        value="<%= typeof lastname != 'undefined' ? lastname : '' %>"
                    >
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input 
                        type="email"
                        name="email"
                        id="email"
                        class="form-control"
                        placeholder="Enter Email"
                        value="<%= typeof email != 'undefined' ? email : '' %>"
                    >
                </div>
                <div class="form-group">
                    <label for="gender">Gender</label>
                    <select class="form-control" name="gender" id="gender">
                        <option value="Unchanged">Unchanged</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                </div> 
                <div class="form-group">
                    <label for="sexOr">Sexual Orientation</label>
                    <select class="form-control" name="sexOr" id="sexOr">
                        <option value="Unchanged">Unchanged</option>
                        <option value="Bi">Bisexual</option>
                        <option value="Hetro">Hetrosexual</option>
                        <option value="Homo">Homosexual</option>
                    </select>
                </div>
                <div class="form-group">
                  <label for="dateOfBirth">Date of birth</label>
                  <input
                    type="date"
                    class="form-control"
                    name="dateOfBirth"
                    id="dateOfBirth"
                  >
