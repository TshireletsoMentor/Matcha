<%- include ('./include/adminNav') %>
<h1 class="mt-4">Reports</h1><br>
<%- include ('./partials/messages') %>
<div class="d-sm-flex flex-row flex-wrap">
  <% for(let i = 0; i < ret.length; i++) { %>
    <div class="col-lg-6 col-md-6">
      <div class="card h-100">
          <div class="card-body">
            <strong>Complainant:</strong>
              <p><%= ret[i].complainant %></p>
            <strong>Offender:</strong>
              <p><%=ret[i].complaintAbout %></p>
            <strong>Subject:</strong>
              <p><%= ret[i].subject %></p>
            
            <strong>Complaint:</strong>
            <div class="mt-3" style="overflow-y:auto; height:60%">
              <%= ret[i].text %>
            </div>
            </div>
            <div class="card-footer mt-1 d-flex flex-row justify-content-center">
                <div class="p-2">
                    <a href="/suspendAcc2?userID=<%- ret2[0].id %>&reportID=<%- ret[i].id %>">
                        <i data-toggle="tooltip" data-placement="top" title="Suspended Offender" class="fa fa-balance-scale"></i>
                    </a>
                </div>
                <div class="p-2">
                  <a href="/suspendAcc2?userID=<%- ret1[0].id %>&reportID=<%- ret[i].id %>">
                      <i data-toggle="tooltip" data-placement="top" title="Suspended Complainant" class="fa fa-ban"></i>
                  </a>
                </div>
                <div class="p-2">
                  <a href="/processReport/<%- ret[i].id %>">
                    <i data-toggle="tooltip" data-placement="top" title="Process report" class="fa fa-tasks"></i>
                  </a>
                </div>
            </div>
          
        </div>
    </div>
    <br>
  <% } %>
</div>
<%- include ('./include/footer')%>
